		<artifactId>kernel-parent</artifactId>
		<version>0.12.5</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>net.bytebuddy</groupId>
			<artifactId>byte-buddy</artifactId>
			<version>${byte.buddy.version}</version>
		</dependency>
         <dependency>
